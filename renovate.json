{
  "extends": [
    "config:base"
  ],
  "platform": "github",
  "hostRules": [
    {
      "hostType": "npm",
      "matchHost": "npm.pkg.github.com",
      "token": "${RENOVATE_TOKEN}"
    }
  ],
  "enabledManagers": [
    "npm"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "@nadyakarandasheva/ui-library"
      ],
      "groupName": "UI Library Updates",
      "enabled": true
    }
  ]
}